@code {
    [Parameter]
    public int TotalQuestions { get; set; }

    [Parameter]
    public int AnsweredQuestions { get; set; }
}

<div class="progress-bar-container">
    <div class="progress-bar" style="width: @(TotalQuestions > 0 ? (100.0 * AnsweredQuestions / TotalQuestions) : 0)%"></div>
</div>

<style>
    .progress-bar-container {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        height: 15px;
        background-color: #f0f0f0;
        border-radius: 3px;
        overflow: hidden;
        width: 100%;
    }

    .progress-bar {
        background-color: #4caf50;
        height: 100%;
        transition: width 0.3s;
    }
</style>
