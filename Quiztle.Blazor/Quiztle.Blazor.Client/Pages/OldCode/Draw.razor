@* @page "/draw"

<h1>Desenhar Retângulo e Triângulo</h1>

<p>Retângulo:</p>
<canvas id="rectangleCanvas" width="400" height="200"></canvas>

<p>Triângulo:</p>
<canvas id="triangleCanvas" width="400" height="200"></canvas>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            DrawRectangle("rectangleCanvas", 50, 50, 200, 100, "blue");
            DrawTriangle("triangleCanvas", 200, 50, 100, 150, 300, 150, "red");
        }
    }

    private void DrawRectangle(string canvasId, int x, int y, int width, int height, string color)
    {
        var canvas = Document.GetElementById(canvasId) as HTMLCanvasElement;
        var ctx = canvas.GetContext(CanvasTypes.CanvasContext2DType.CanvasRenderingContext2D);
        ctx.FillStyle = color;
        ctx.FillRect(x, y, width, height);
    }

    private void DrawTriangle(string canvasId, int x1, int y1, int x2, int y2, int x3, int y3, string color)
    {
        var canvas = document.GetElementById(canvasId) as HTMLCanvasElement;
        var ctx = canvas.GetContext(CanvasTypes.CanvasContext2DType.CanvasRenderingContext2D);
        ctx.BeginPath();
        ctx.MoveTo(x1, y1);
        ctx.LineTo(x2, y2);
        ctx.LineTo(x3, y3);
        ctx.ClosePath();
        ctx.FillStyle = color;
        ctx.Fill();
    }
}
 *@