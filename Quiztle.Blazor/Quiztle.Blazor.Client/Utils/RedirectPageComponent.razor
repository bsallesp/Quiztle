@* @inject NavigationManager NavigationManager

@code {
    [Parameter]
    public string address { get; set; } = "/home";
    [Parameter]
    public bool force { get; set; } = false;

    protected override Task OnParametersSetAsync()
    {
        var uri = new Uri(NavigationManager.BaseUri);
        var fullAddress = new UriBuilder(uri) { Scheme = Uri.UriSchemeHttps, Host = address }.Uri.ToString();

        NavigationManager.NavigateTo(fullAddress, force);
        return base.OnParametersSetAsync();
    }
}
